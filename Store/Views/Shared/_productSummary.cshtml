@using Store.Data.Models
@model Product
  
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/Images/@Model.ImageThumbnailUrl" alt="" style="min-height:300px;width:95%;" class="img-responsive" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.ProductName</a>
            </h3>
            <p>@Model.Description</p>
        </div>
    </div>
    <div class="addToCart text-Left">
        <p class="button">
            <a class="btn btn-success" id="cartButton"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-drinkId="@Model.ProductId">
                Add To Cart
            </a>
        </p>
    </div>
</div>
